
@{
    ViewBag.Title = "Continue";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h4 class="mt-5">Please continue entering your informations below:</h4>
                <form action="/Home/Continue" method="post">
                    <div class="form-group ">
                        <label for="MyAddress">Address:</label>
                        <input type="text" class="form-control" id="MyAddress" name="MyAddress" value="" placeholder="Enter Your Address here">
                    </div>
                    <div class="form-group">
                        <label for="MyEmail">Email:</label>
                        <input type="text" class="form-control" id="MyEmail" name="MyEmail" value="" placeholder="Enter Your Email here">
                                    
                       @ViewBag.Name
                    </div>
                    <button type="submit" class="btn btn-primary" value="Create">Finish</button>
                    <div>
                        <label for="StartOver" class="font-weight-normal mt-5" >If you want to delete all the saved informations and start over click here:</label>
                        
                    </div>
                    <div>
                        <a class="btn btn-danger" href="@Url.Action("ClearAllData","Home")">Clear All</a>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
    @if (ViewBag.message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.message");
            }
        </script>
    }
</body>
</html>

